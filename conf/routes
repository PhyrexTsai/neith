# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           me.mig.mars.controllers.HomeController.index
# The API routes of Verification controller
POST    /sendVerificationEmail      me.mig.mars.controllers.VerificationController.verifyByEmail
# The API routes of Settings controller
POST    /sendForgotPasswordEmail    me.mig.mars.controllers.SettingsController.handleForgotPassword
# The API routes of JobSchedule controller
POST    /jobs                       me.mig.mars.controllers.JobScheduleController.createUpdateJob
PUT     /jobs                       me.mig.mars.controllers.JobScheduleController.createUpdateJob
GET     /jobs                       me.mig.mars.controllers.JobScheduleController.getJobs(id: String = "", page: Option[Int], pageSize: Option[Int])
GET     /jobs/:id                   me.mig.mars.controllers.JobScheduleController.getJobs(id: String, page: Option[Int], pageSize: Option[Int])
DELETE  /jobs/:id                   me.mig.mars.controllers.JobScheduleController.deleteJob(id: String)
GET     /jobs/:id/history           me.mig.mars.controllers.JobScheduleController.getJobHistory(id)
GET     /notificationtypes          me.mig.mars.controllers.JobScheduleController.getNotificationTypes()
GET     /fakeNotification/:ntype    me.mig.mars.controllers.JobScheduleController.fakeNotification(ntype: String)
# An example controller showing how to write asynchronous code
GET     /health                     me.mig.mars.controllers.HealthController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
