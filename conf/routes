# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file                                   controllers.Assets.at(path="/public", file)

# Health check
GET     /health                                         me.mig.neith.controllers.HealthController.alive

# Users
PUT     /v1/users/:userId/upload                        me.mig.neith.controllers.UsersController.upload(userId: Int)
POST    /v1/users/:userId/initiateMultipartUpload       me.mig.neith.controllers.UsersController.initiateMultipartUpload(userId: Int)
POST    /v1/users/:userId/uploadPart                    me.mig.neith.controllers.UsersController.uploadPart(userId: Int)
POST    /v1/users/:userId/completeMultipartUpload       me.mig.neith.controllers.UsersController.completeMultipartUpload(userId: Int)
DELETE  /v1/users/:userId/abortMultipartUpload          me.mig.neith.controllers.UsersController.abortMultipartUpload(userId: Int, fileName: String, uploadId: String)
GET     /v1/users/:userId/listMultipartUploads          me.mig.neith.controllers.UsersController.listMultipartUploads(userId: Int, fileName: String, uploadId: String, maxUploads: Int = 3, delimiter: String = "")
GET     /v1/users/:userId/listParts                     me.mig.neith.controllers.UsersController.listParts(userId: Int, fileName: String, uploadId: String, maxParts: Int = 10, partNumber: Int = 0)